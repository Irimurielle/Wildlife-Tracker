{{#partial "content"}}
    <div class="container">
        <div class="indexRow">
            <div class="col-md-12 mb-4 white-text text-center">
                <div class="row">
                    <div class="col-sm-4 col-sm-offset-4 animals">
                        <div class="content">
                            <h3 class="text-center">Add Animal</h3>
                            <form action="/animals" method="post">
                                {{#if endangered}}
                                    <div class="form-group">
                                        <label for="type">Type</label><br>
                                        <div class="form-check form-check-inline">
                                            <label class="radio-inline" for="radio1">
                                                <input type="radio" name="type" id="radio1" value="normal" onClick="window.location = '/animals/new';">Non-endangered</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <label class="radio-inline" for="radio2">
                                                <input type="radio" name="type" id="radio2" value="endangered" onClick="window.location = '/animals/new/endangered';" checked>Endangered</label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="name">Name</label>
                                        <input type="text" class="form-control form-control-lg" id="name" name="name" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="health">Health</label>
                                        <select class="custom-select" id="health" name="health">
                                            <option>Choose</option>
                                                {{#if health }}
                                                    {{#each health }}
                                                        <option name="health" value={{health}}>{{health}}</option>
                                                    {{/each}}
                                                {{/if}}
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="age">Age</label>
                                        <select class="custom-select" id="age" name="age">
                                            <option>Choose</option>
                                                {{#if age }}
                                                    {{#each age}}
                                                        <option name="age" value={{age}}>{{age}}</option>
                                                    {{/each}}

                                                {{/if}}
                                        </select>
                                    </div>
                                {{else}}
                                    <div class="form-group">
                                        <label for="type">Type</label><br>
                                        <div class="form-check form-check-inline">
                                            <label class="radio-inline" for="radio1">
                                                <input type="radio" name="type" id="radio1" value="normal" onClick="window.location = '/animals/new';" checked>Non-endangered</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <label class="radio-inline" for="radio2">
                                                <input type="radio" name="type" id="radio2" value="endangered" onClick="window.location = '/animals/new/endangered';">Endangered</label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="name">Name</label>
                                        <input type="text" class="form-control form-control-lg" id="name" name="name" required>
                                    </div>
                                {{/if}}
                                <button class="btn btn-success " type="submit">Add</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/partial}}

{{> layout.hbs}}