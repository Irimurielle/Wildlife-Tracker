{{#partial "content"}}
    <div class="container">
        <div class="indexRow">
            <div class="col-md-12 mb-4 white-text text-center">
                <div class="row">
                    <div class="col-sm-4 col-sm-offset-4">
                        <form action="/sightings" method="post">
                            <div class="form-group">
                                <label for="animal" class="in-line">Animal:</label>
                                <select id="animal" name="animal" type="text" class="form-control">
                                    <option selected>Choose</option>
                                    {{#if animals}}
                                        {{#each animals}}
                                            <option name="animal" value={{animals.id}}>{{animals.name}}</option>
                                        {{/each}}
                                    {{/if}}
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="location">Location:</label>
                                <select id="location" name="location" type="text" class="form-control">
                                    <option selected>Choose</option>
                                    {{#if locations}}
                                        {{#each locations}}
                                            <option name="location" value={{locations.id}}>{{locations.name}}</option>
                                        {{/each}}
                                    {{/if}}
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="rangerName">Ranger:</label>
                                <select id="location" name="location" type="text" class="form-control">
                                    <option selected>Choose</option>
                                    {{#if rangers}}
                                        {{#each rangers}}
                                        <option name="animal" value={{rangers.id}}>{{rangers.name}}</option>
                                    {{/each}}
                                {{/if}}
                            </div>
                            <button class="btn btn-info" type="submit" name="add-sighting">Add</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{{/partial}}

{{> layout.hbs}}
