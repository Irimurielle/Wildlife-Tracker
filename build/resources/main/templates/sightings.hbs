{{#partial "content"}}
    <div class="container">
        <div class="indexRow">
            <div class="col-md-12 mb-4 white-text text-center">
                <h3 class="text-warning text-uppercase font-weight-bold mb-0 pt-md-5 pt-5 animated wobble"><strong> Sightings: </strong></h3>
                <div class="row">
                    <div class="col-sm-4 col-sm-offset-4">
                        <a href="/sightings/new"><button type="button" class="btn btn-info">Add Sighting</button></a>
                        <h3>All Sightings:</h3>
                            {{#if sightings}}
                                <div class="col-md-3">
                                    <h3>Time</h3>
                                        {{#each sightings}}
                                            <p>{{sightings.timestamp}}</p>
                                        {{/each}}
                                </div>
                                <hr>
                                <div class="col-md-3">
                                    <h3>Animal</h3>
                                        {{#each animals}}
                                             <h3>{{animals}}</h3>
                                        {{/each}}
                                </div>
                            {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/partial}}

{{> layout.hbs}}